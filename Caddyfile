# global options
{
	admin off # theres no need for the admin api in railway's environment
	persist_config off # storage isn't persistent anyway
	auto_https off # railway handles https for us, this could in some cases cause issues if left enabled
	# runtime logs
	log {
		format json # set runtime log format to json mode
	}
	# server options
	servers {
		trusted_proxies static private_ranges # trust railway's proxy
	}
}

# site block, listens on the $PORT environment variable, automatically assigned by railway
:{$PORT} {
	# access logs
	log {
		format json # set access log format to json mode
	}

	# IMPORTANT: Order matters! More specific paths must come first.

	# Route Temporal UI's internal SSO endpoints to frontend (NOT to Authorizer)
	# These are Temporal UI's own endpoints for initiating/completing SSO
	handle /auth/sso* {
		reverse_proxy {$FRONTEND_HOST}:{$FRONTEND_PORT} {
			header_up X-Forwarded-Proto {scheme}
			header_up X-Forwarded-Host {host}
			header_up X-Forwarded-For {remote_host}
		}
	}

	# Route all other /auth/* paths to Authorizer backend
	# Use handle_path to STRIP the /auth prefix before forwarding
	# Authorizer expects /authorize, /oauth/token, /userinfo, etc. (NOT /auth/authorize)
	handle_path /auth/* {
		reverse_proxy {$BACKEND_HOST}:{$BACKEND_PORT} {
			header_up X-Forwarded-Proto {scheme}
			header_up X-Forwarded-Host {host}
			header_up X-Forwarded-For {remote_host}
			# Tell Authorizer what the external URL is
			header_up X-Authorizer-URL https://{host}/auth
		}
	}

	# Also handle /auth exactly (strip it to /)
	handle_path /auth {
		reverse_proxy {$BACKEND_HOST}:{$BACKEND_PORT} {
			header_up X-Forwarded-Proto {scheme}
			header_up X-Forwarded-Host {host}
			header_up X-Forwarded-For {remote_host}
			header_up X-Authorizer-URL https://{host}/auth
		}
	}

	# Route Authorizer's built-in login page (/app) to Authorizer backend
	# This is where Authorizer redirects users for authentication
	handle /app* {
		reverse_proxy {$BACKEND_HOST}:{$BACKEND_PORT} {
			header_up X-Forwarded-Proto {scheme}
			header_up X-Forwarded-Host {host}
			header_up X-Forwarded-For {remote_host}
		}
	}

	# Route Authorizer's GraphQL API endpoint
	# The /app frontend uses this to communicate with Authorizer
	handle /graphql {
		reverse_proxy {$BACKEND_HOST}:{$BACKEND_PORT} {
			header_up X-Forwarded-Proto {scheme}
			header_up X-Forwarded-Host {host}
			header_up X-Forwarded-For {remote_host}
		}
	}

	# Route everything else to the frontend (Temporal UI)
	handle {
		reverse_proxy {$FRONTEND_HOST}:{$FRONTEND_PORT} {
			header_up X-Forwarded-Proto {scheme}
			header_up X-Forwarded-Host {host}
			header_up X-Forwarded-For {remote_host}
		}
	}
}
# Deployment trigger: 2025-01-25-v4-header-forwarding
